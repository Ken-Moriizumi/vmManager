<h1>Listing ipaddrs</h1>

<table class="table table-striped table-bordered" border=1>
  <thead>
    <tr>
      <th>Ipaddress</th>
      <th>資産管理番号</th>
      <th>マシン名</th>
      <th>MacAddress</th>
      <th>用途</th>
      <th>備考</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @ipaddrs.each do |ipaddr| %>
      <tr>
        <td><%= ipaddr.ipaddress %></td>
        <td><%= ipaddr.manageno %></td>
        <td><%= ipaddr.servername %></td>
        <td><%= ipaddr.macaddress %></td>
        <td><%= ipaddr.use %></td>
        <td><%= ipaddr.remarks %></td>
        <td><%= link_to 'Show', ipaddr %></td>
        <td><%= link_to 'Edit', edit_ipaddr_path(ipaddr) %></td>
        <td><%= link_to 'Destroy', ipaddr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

